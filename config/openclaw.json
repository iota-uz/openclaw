{
  "$schema": "https://openclaw.ai/schema/config.json",
  "gateway": {
    "bind": "lan",
    "auth": {
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "webui": {
      "enabled": true,
      "auth": {
        "username": "${AUTH_USERNAME}",
        "password": "${AUTH_PASSWORD}"
      }
    }
  },
  "channels": {
    "discord": {
      "enabled": true,
      "token": "${DISCORD_BOT_TOKEN}",
      "policy": "allowlist",
      "requireMention": true,
      "guilds": {
        "YOUR_DISCORD_GUILD_ID": {
          "enabled": true,
          "channels": []
        }
      },
      "dmAllowlist": [
        "YOUR_DISCORD_USER_ID_1",
        "YOUR_DISCORD_USER_ID_2"
      ]
    },
    "telegram": {
      "enabled": true,
      "token": "${TELEGRAM_BOT_TOKEN}",
      "policy": "allowlist",
      "requireMention": true,
      "groups": [
        "YOUR_TELEGRAM_GROUP_CHAT_ID"
      ],
      "dmAllowlist": [
        "YOUR_TELEGRAM_USER_ID_1",
        "YOUR_TELEGRAM_USER_ID_2"
      ]
    }
  },
  "agents": {
    "default": {
      "provider": "openrouter",
      "model": "openrouter/auto",
      "apiKey": "${OPENROUTER_API_KEY}",
      "systemPromptFiles": ["SOUL.md", "USER.md", "AGENTS.md"]
    }
  }
}
